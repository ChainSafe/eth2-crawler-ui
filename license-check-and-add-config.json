{
  "ignore": ["LICENSE", "*.json", "*.txt", ".env", ".env.template", "build", "assets"],
  "ignoreFile": ".gitignore",
  "license": "copyright.txt",
  "licenseFormats": {
    "gitignore|npmignore|eslintignore|dockerignore|sh|py": {
      "eachLine": {
        "prepend": "# "
      }
    },
    "html|xml|svg": {
      "prepend": "<!--",
      "append": "-->"
    },
    "js|ts|css|scss": {
      "prepend": "/*",
      "append": "*/"
    }
  },
  "trailingWhitespace": "TRIM"
}
